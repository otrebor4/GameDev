'''
physical object template
'''

import game.base.Component as Component
import shapes

class Collider( Component.Component):
    def __init__(self, gameObject):
        Component.Component.__init__( self,gameObject)
        self.shape = None   #collider shape
    

class CircleCollider( Collider ):
    def __init__(self, gameObject, (x,y)=(0,0), radius=0):
        Collider.__init__(self, gameObject)
        self.shape = shapes.Circle.Circle( (x,y), radius )
        
    
class RectCollider( Collider ):
    def __init__(self, gameObject, (x,y) =(0,0), (w,h) = (0,0)):
        Collider.__init__(self, gameObject)
        self.shape = shapes.Rectangle.Rectangle( x,y,w,h)
        
        
        