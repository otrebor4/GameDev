import game.util.Vector2 as Vector2
class Geometry:
    def Geometry(self):
        self.aabb = [0,0,0,0]
    
    #center of the aabb box
    
def center(self):
        return Vector2.Vector2( (self.Top() + self.Bottom())/2, (self.Left()+self.Right())/2)
    
    def Top(self):
        return self.aabb[0]
    
    def Right(self):
        return self.aabb[1]
    
    def Bottom(self):
        return self.aabb[2]
    
    def Left(self):
        return self.aabb[3]