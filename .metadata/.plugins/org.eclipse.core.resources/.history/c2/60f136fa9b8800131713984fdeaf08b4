import game.base.Component as Component
import game.util.Vector2 as vector2


class Collider( Component.Component):
    def __init__(self, gameObject):
        Component.Component.__init__( self,gameObject)
        self.shape = None   #collider shape
        self.mass = 1       #object mass
        self.static = False #object is static, can't be moved
        self.speed = Vector2.Vector2()
    
    
    
    def pos(self):
        return self.position
    
    def setPos(self, pos):
        self.position = pos
    

    # must move to other script
    
    def setSpeed(self, speed):
        self.speed = speed
    
    def update(self, delta):
        if not self.static:
            self.position = self.position.add(self.speed.scale(delta))
        pass
