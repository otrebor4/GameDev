import game.util.Vector2 as Vector2
class Shape:
    def __init__(self, (x,y)):
        self.position = Vector2.Vector2(x,y)
        self.aabb = [0,0,0,0]
    
    '''
    are world aabb 
    '''
    def Top(self):
        return self.aabb[0] + self.position.y
    def Righ(self):
        return self.aabb[1] + self.position.x
    def Bottom(self):
        return self.aabb[2] + self.position.y
    def Left(self):
        return self.aabb[3] + self.position.x
    
    
    
    