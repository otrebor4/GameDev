import sys
import time

import pygame
from pygame.locals import *

import world


class Game:
    GAMENAME = "null"
    
    INIT = False        
    def __init__ (self):
        self.INIT = True
        pygame.init()
        self.screen = pygame.display.set_mode((500, 500))
        pygame.display.set_caption(self.GAMENAME)
        
        self.world = world.World()
        self.world.createCircle(250,250,100,(255,0,255))
        
    def draw(self, delta):
        self.screen.fill((255, 255, 0))
        self.world.draw(self.screen)
        pygame.display.flip()
        return
    
    def update(self, delta):
        pygame.event.pump()
        for evt in pygame.event.get():
            if evt.type == QUIT:
                pygame.quit()
                sys.exit()
        self.world.update(delta)
        
        return
    
    def run(self):
        if not self.INIT:
            self.init()
        oldtime = pygame.time.get_ticks()
        time.sleep(1)
        while True:
            newtime = pygame.time.get_ticks()
            delta = newtime - oldtime
            oldtime = newtime
            self.update(delta)
            self.draw(delta)
            
if __name__ == '__main__':
    g = Game()
    g.run()
    
        
