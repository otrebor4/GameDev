import sys
import time

import pygame
from pygame.locals import *
from game.phys.physworld import World

class Game:
    GAMENAME = "null"
    
    INIT = False        
    def __init__ (self):
        self.INIT = True
        pygame.init()
        self.screen = pygame.display.set_mode((500, 500))
        pygame.display.set_caption(self.GAMENAME)
        self.world = World()
        
        
        
    def draw(self, delta):
        self.screen.fill((255, 255, 0))
        pygame.draw.line(self.screen, (0, 0, 0), (0, 0), self.mPos)
        pygame.display.flip()
        return
    
    def update(self, delta):
        pygame.event.pump()
        for evt in pygame.event.get():
            if evt.type == QUIT:
                pygame.quit()
                sys.exit()
        self.mPos = pygame.mouse.get_pos()
        return
    
    def run(self):
        if not self.INIT:
            self.init()
        oldtime = pygame.time.get_ticks()
        time.sleep(1)
        while True:
            newtime = pygame.time.get_ticks()
            delta = newtime - oldtime
            oldtime = newtime
            self.update(delta)
            self.draw(delta)
            
if __name__ == '__main__':
    g = Game()
    g.run()
    
        
